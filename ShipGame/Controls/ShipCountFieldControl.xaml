<UserControl x:Class="Statki2.Controls.ShipCountFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Statki2.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="80">
    <Grid >
        <Border BorderBrush="Black" BorderThickness="2" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"  Name="shipLength" Background="LightSteelBlue" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5" FontWeight="SemiBold">X</Label>
                <Label Grid.Column="1" Name="shipCount" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold">x7</Label>
            </Grid>
        </Border>
    </Grid>
</UserControl>
